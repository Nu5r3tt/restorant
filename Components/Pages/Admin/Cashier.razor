                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Admin Panel
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="container mx-auto px-6 py-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <!-- Today's Revenue -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">G√ºnl√ºk Ciro</p>
                        <p class="text-2xl font-bold text-green-600">@todaysRevenue.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</p>
                    </div>
                    <div class="w-12 h-12 bg-green-50 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Pending Payments -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Bekleyen √ñdemeler</p>
                        <p class="text-2xl font-bold text-orange-600">@tablesWithUnpaidOrders</p>
                    </div>
                    <div class="w-12 h-12 bg-orange-50 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Total Tables -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Aktif Masalar</p>
                        <p class="text-2xl font-bold text-blue-600">@(tables?.Count() ?? 0)</p>
                    </div>
                    <div class="w-12 h-12 bg-blue-50 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h4M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Completed Payments Today -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Tamamlanan √ñdemeler</p>
                        <p class="text-2xl font-bold text-purple-600">@completedPaymentsToday</p>
                    </div>
                    <div class="w-12 h-12 bg-purple-50 rounded-lg flex items-center justify-center">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tables Grid -->
        @if (tables == null)
        {
            <div class="flex flex-col items-center justify-center py-20">
                <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-green-600"></div>
                <p class="mt-4 text-lg text-gray-600">Masa bilgileri y√ºkleniyor...</p>
            </div>
        }
        else if (!tables.Any())
        {
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-12 text-center">
                <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H3m2 0h4M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Hen√ºz masa bulunmuyor</h3>
                <p class="text-gray-600 mb-6">Sistemde aktif masa kaydƒ± bulunamadƒ±.</p>
            </div>
        }
        else
        {
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-semibold text-gray-900">Masa Durumlarƒ±</h2>
                    <div class="flex items-center space-x-4 text-sm">
                        <div class="flex items-center">
                            <div class="w-3 h-3 bg-red-400 rounded-full mr-2"></div>
                            <span class="text-gray-600">√ñdeme Bekliyor</span>
                        </div>
                        <div class="flex items-center">
                            <div class="w-3 h-3 bg-green-400 rounded-full mr-2"></div>
                            <span class="text-gray-600">√ñdendi</span>
                        </div>
                    </div>
                </div>
                
                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 xl:grid-cols-8 gap-4">
                    @foreach (var table in tables.OrderBy(t => t.TableNumber))
                    {
                        var hasUnpaidOrders = tablePaymentStatus?.GetValueOrDefault(table.Id, false) ?? false;
                        var tableTotal = tableTotals?.GetValueOrDefault(table.Id, 0) ?? 0;
                        
                        <div class="relative group cursor-pointer" @onclick="() => NavigateToTablePayment(table.Id)">
                            <div class="@(hasUnpaidOrders ? "bg-gradient-to-br from-red-50 to-red-100 border-red-200 hover:from-red-100 hover:to-red-150" : "bg-gradient-to-br from-green-50 to-green-100 border-green-200 hover:from-green-100 hover:to-green-150") 
                                        border-2 rounded-xl p-4 transition-all duration-300 transform group-hover:scale-105 group-hover:shadow-lg min-h-[120px] flex flex-col justify-center items-center">
                                
                                <!-- Table Icon -->
                                <div class="@(hasUnpaidOrders ? "text-red-600" : "text-green-600") text-2xl mb-2">
                                    @if (hasUnpaidOrders)
                                    {
                                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"/>
                                        </svg>
                                    }
                                    else
                                    {
                                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                    }
                                </div>
                                
                                <!-- Table Number -->
                                <h3 class="@(hasUnpaidOrders ? "text-red-900" : "text-green-900") text-sm font-bold mb-1">
                                    Masa @table.TableNumber
                                </h3>
                                
                                <!-- Status -->
                                @if (hasUnpaidOrders)
                                {
                                    <div class="text-red-700 font-semibold text-xs mb-1">
                                        @tableTotal.ToString("C", new System.Globalization.CultureInfo("tr-TR"))
                                    </div>
                                    <div class="text-red-600 text-xs opacity-75">
                                        √ñdeme Al ‚Üí
                                    </div>
                                }
                                else
                                {
                                    <div class="text-green-700 font-medium text-xs">
                                        √ñdendi ‚úì
                                    </div>
                                }
                            </div>
                            
                            @if (hasUnpaidOrders)
                            {
                                <!-- Payment Amount Badge -->
                                <div class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full px-2 py-1 text-xs font-bold shadow-lg border-2 border-white">
                                    @tableTotal.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="fixed bottom-4 right-4 bg-red-50 border-l-4 border-red-400 text-red-700 px-6 py-4 rounded-lg shadow-lg max-w-md">
            <div class="flex items-center">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                    <p class="font-medium">Hata!</p>
                    <p class="text-sm">@errorMessage</p>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private IEnumerable<Table>? tables;
    private Dictionary<int, bool>? tablePaymentStatus;
    private Dictionary<int, decimal>? tableTotals;
    private decimal todaysRevenue = 0;
    private int tablesWithUnpaidOrders = 0;
    private int completedPaymentsToday = 0;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            // Load tables
            tables = await TableRepository.GetActiveTablesAsync();
            
            // Load payment status for each table
            tablePaymentStatus = new Dictionary<int, bool>();
            tableTotals = new Dictionary<int, decimal>();
            
            foreach (var table in tables)
            {
                var hasUnpaid = await PaymentRepository.HasUnpaidOrdersAsync(table.Id);
                var total = await PaymentRepository.GetTableTotalAsync(table.Id);
                
                tablePaymentStatus[table.Id] = hasUnpaid;
                tableTotals[table.Id] = total;
            }
            
            // Load statistics
            todaysRevenue = await PaymentRepository.GetTotalRevenueByDateAsync(DateTime.Today);
            tablesWithUnpaidOrders = tablePaymentStatus.Values.Count(x => x);
            
            completedPaymentsToday = await PaymentRepository.GetTodayTransactionsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = "Veriler y√ºklenirken hata olu≈ütu.";
            Console.WriteLine($"Error loading cashier data: {ex.Message}");
        }
    }

    private async Task RefreshData()
    {
        await LoadData();
        StateHasChanged();
    }

    private void NavigateToTablePayment(int tableId)
    {
        Navigation.NavigateTo($"/admin/cashier/table/{tableId}");
    }

    private void ViewTodaysReport()
    {
        Navigation.NavigateTo("/admin/cashier/daily-report");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/admin");
    }
}
