@page
@model LoginModel
@{
    ViewData["Title"] = "Admin Giriş";
}
@* Tüm login stilleri app.css dosyasına taşındı *@
<script>
    document.body.classList.add('login-bg');
</script>
<div class="flex items-center justify-center min-h-screen">
    <div class="login-glass">
        <div class="flex flex-col items-center mb-6">
            <img src="/favicon.png" alt="Restoran Logo" class="login-logo" />
            <div class="login-title">Restoran Yönetici Girişi</div>
            <div class="login-desc">Yönetici hesabınızla giriş yapın</div>
        </div>
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="login-error">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    @error.ErrorMessage <br />
                }
            </div>
        }
        <form method="post" class="space-y-6">
            <div>
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">E-posta</label>
                <input asp-for="Input.Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-soft focus:ring focus:ring-primary-soft focus:ring-opacity-50" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-xs"></span>
            </div>
            <div>
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Şifre</label>
                <input asp-for="Input.Password" type="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-soft focus:ring focus:ring-primary-soft focus:ring-opacity-50" autocomplete="current-password" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
            </div>
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input asp-for="Input.RememberMe" class="h-4 w-4 text-primary-soft focus:ring-primary-soft border-gray-300 rounded" />
                    <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-900">Beni Hatırla</label>
                </div>
                <a asp-page="./ForgotPassword" class="login-link">Şifremi Unuttum?</a>
            </div>
            <button type="submit" class="login-btn">Giriş Yap</button>
        </form>
        <div class="mt-6 text-center">
            <a asp-page="./Register" class="login-link">Hesabınız yok mu? Kayıt Olun</a>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
